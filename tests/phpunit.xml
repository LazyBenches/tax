<?xml version="1.0" encoding="UTF-8"?>

<phpunit
         bootstrap="./BootStrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         verbose="true"
         colors="true"
         beStrictAboutOutputDuringTests="true"
         convertErrorsToExceptions="true"
